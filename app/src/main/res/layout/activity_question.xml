<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".QuestionActivity">

    <TextView
        android:id="@+id/question_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/answer_btn_1"
        android:text="question blablabla"
        style="@style/WelcomePage"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        />

    <Button
        android:id="@+id/answer_btn_1"
        style="@style/AnswerButton"
        android:text="réponse 1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/question_title"
        app:layout_constraintBottom_toTopOf="@id/answer_btn_2"
        />

    <Button
        android:id="@+id/answer_btn_2"
        style="@style/AnswerButton"
        android:text="réponse 2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/answer_btn_1"
        app:layout_constraintBottom_toTopOf="@id/answer_btn_3"
        />

    <Button
        android:id="@+id/answer_btn_3"
        style="@style/AnswerButton"
        android:text="réponse 3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/answer_btn_2"
        app:layout_constraintBottom_toBottomOf="@id/answer_btn_4"
        />

    <Button
        android:id="@+id/answer_btn_4"
        style="@style/AnswerButton"
        android:text="Réponse 4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/answer_btn_3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>